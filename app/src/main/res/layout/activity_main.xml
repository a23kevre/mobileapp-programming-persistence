<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/helloTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.100"/>

    <Button
        android:text="@string/app_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readBtn"
        app:layout_constraintTop_toBottomOf="@+id/helloTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="@string/app_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/writeBtn"
        app:layout_constraintTop_toBottomOf="@+id/readBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skriv n책got h채r"
        android:id="@+id/edtTxt1"
        app:layout_constraintTop_toBottomOf="@+id/writeBtn"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skriv annat h채r"
        android:id="@+id/edtTxt2"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skriv tredje h채r"
        android:id="@+id/edtTxt3"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>